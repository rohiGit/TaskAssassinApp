<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TodoActivity">

    <TextView
        android:id="@+id/update_date_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_task_detail_txt" />

    <androidx.appcompat.widget.AppCompatImageButton
        android:id="@+id/update_time_button"
        android:layout_width="69dp"
        android:layout_height="68dp"
        android:layout_marginTop="128dp"
        android:layout_marginEnd="48dp"
        android:background="#00FFFFFF"
        android:scaleType="fitStart"
        android:src="@drawable/ic_access_time_black_24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/update_task_detail_txt"
        android:layout_width="314dp"
        android:layout_height="41dp"
        android:layout_marginStart="57dp"
        android:layout_marginTop="57dp"
        android:ems="10"
        android:hint="Describe your task"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/update_textView14"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="27dp"
        android:text="Set date and time"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/update_time_button" />

</androidx.constraintlayout.widget.ConstraintLayout>